<p id="notice"><%= notice %></p>

<h1>Listing Cheeses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Style</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cheeses.each do |cheese| %>
      <tr>
        <td><%= cheese.name %></td>
        <td><%= cheese.style %></td>
        <td><%= cheese.description %></td>
        <td><%= link_to 'Show', cheese, class: 'btn btn-xs' %></td>
        <td><%= link_to 'Edit', edit_cheese_path(cheese), class: 'btn btn-xs' %></td>
        <td><%= link_to 'Destroy', cheese, class: 'btn btn-xs', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

